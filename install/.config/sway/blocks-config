# CPU usage
#
# The script may be called with -w and -c switches to specify thresholds,
# see the script for details.
[cpu_usage]
label= 
interval=10
min_width= 00%
DECIMALS=0

# Battery indicator
#
# The battery instance defaults to 0.
[battery2]
interval=30

# Date Time
#
[time]
command=date '+%b %d %H:%M'
interval=5

